<Window x:Class="WPFScheduler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFScheduler"
        mc:Ignorable="d"
        Title="Planer" Height="450" Width="800">
    <UniformGrid Columns="3">
        <Button x:Name="calendarButton" BorderBrush="Black"
                BorderThickness="3" Click="calendarButton_Click">
            <Image Source="Images/calendar.png" Stretch="Fill"
                   Cursor="Hand"/>
        </Button>
        
        <Button x:Name="toDoListButton" BorderBrush="Black"
                BorderThickness="3" Click="toDoListButton_Click"
                Cursor="Hand">
            <Image Source="Images/todolist.jpg" Stretch="Fill"/>
        </Button>

        <Button x:Name="weatherButton" BorderBrush="Black" 
                BorderThickness="3" Click="weatherButton_Click"
                Cursor="Hand">
            <Image Source="Images/weather.jpg" Stretch="Fill"/>
        </Button>
    </UniformGrid>
    
</Window>
